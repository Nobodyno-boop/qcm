{% extends "base.twig" %}

{% block content %}



    <div class="landing-flex">
        <div class="present">
            <h1 class="title">Bienvenue sur Q-CM !</h1>
            <p class="desc">Vous y trouverez des QCMs de toutes sortes <span class="bold">créées</span> par la <span
                        class="bold">communauté</span> pour la <span class="bold">communauté</span> !</p>
        </div>
        <div class="qcms">
            <div class="text">
                <p>Les derniers QCM ajoutés</p>
            </div>
            <div class="imos">
                {% for qcm in data %}
                    <a href="qcm/view/{{ qcm.id }}">
                        <div class="imo">
                            <div class="image">
                                <img src="https://pipoucolors.clownerie.space/api/v1/250/150/" alt="">
                            </div>
                            <div class="title">{{ qcm.title }}</div>
                            <div class="infos">
                        <span><i class="las la-user-circle"></i><span
                                    class="bold">{{ qcm.author.username }}</span> </span>
                                <span><i class="las la-calendar-alt"></i><span class="bold">27/04/2020</span> </span>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>

    </div>

{% endblock %}